@model EjercicioCodeFirstCursos.Models.DtoCategoria

@{
    ViewData["Title"] = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Estás seguro que deseas borrarla?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
		<dd>
			@if (Model.ImagenGuardada != null)
			{
				<img bytes-foto="Model.ImagenGuardada" />
			}
		</dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodCategoria" />
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
